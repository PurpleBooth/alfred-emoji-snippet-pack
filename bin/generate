#!/usr/bin/env ruby
require 'securerandom'
require 'json'
require 'gemoji'

Emoji.all.each do |emoji|
  snippet_name = "#{emoji.raw} \"#{emoji.name}\" #{emoji.description}"

  snippet = {
      alfredsnippet: {
          snippet: emoji.raw,
          uid: SecureRandom.uuid,
          name: snippet_name,
          keyword: ":#{emoji.name}:"
      }
  }

  File.write(File.join("build", "json", "#{emoji.name}-#{SecureRandom.uuid}.json"), JSON.generate(snippet))
end